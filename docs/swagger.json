{
    "swagger": "2.0",
    "info": {
        "description": "野球選手の成績を管理するAPIを提供する",
        "title": "Baseball API",
        "contact": {},
        "license": {
            "name": "ライセンス(必須)",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "バージョン(1.0)"
    },
    "host": "localhost:50051",
    "basePath": "/v1",
    "paths": {
        "/players": {
            "post": {
                "description": "選手を作成する",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "players"
                ],
                "summary": "選手を作成する",
                "parameters": [
                    {
                        "description": "User information",
                        "name": "player",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/internal.createPlayerRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/internal.createPlayerResponse"
                        }
                    }
                }
            }
        },
        "/players/crawl": {
            "post": {
                "description": "\"https://baseball-data.com/stats/hitter-%v/tpa-1.html\" から選手情報をクロールする",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "players"
                ],
                "summary": "選手情報のクロール",
                "responses": {
                    "204": {
                        "description": "No Content"
                    }
                }
            }
        },
        "/players/search": {
            "get": {
                "description": "選手を作成する",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "players"
                ],
                "summary": "選手を検索する",
                "parameters": [
                    {
                        "type": "integer",
                        "format": "int",
                        "example": 10,
                        "name": "limit",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "format": "int64",
                        "example": 20,
                        "name": "max_hits",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "format": "int64",
                        "example": 10,
                        "name": "max_home_runs",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "format": "int64",
                        "example": 20,
                        "name": "max_runs_batted_in",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "format": "int64",
                        "example": 10,
                        "name": "min_hits",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "format": "int64",
                        "example": 5,
                        "name": "min_home_runs",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "format": "int64",
                        "example": 10,
                        "name": "min_runs_batted_in",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "format": "string",
                        "example": "hits",
                        "name": "sort_field",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "format": "string",
                        "example": "asc",
                        "name": "sort_order",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/internal.searchPlayerResponse"
                        }
                    }
                }
            }
        },
        "/players/{id}": {
            "get": {
                "description": "選手を作成する",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "players"
                ],
                "summary": "選手を取得する",
                "parameters": [
                    {
                        "type": "string",
                        "description": "id",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/internal.fetchPlayerResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "internal.createPlayerRequest": {
            "type": "object",
            "required": [
                "at_bats",
                "hits",
                "home_runs",
                "name",
                "runs_batted_in",
                "uniform_number",
                "walks"
            ],
            "properties": {
                "at_bats": {
                    "type": "integer",
                    "format": "int64",
                    "example": 100
                },
                "hits": {
                    "type": "integer",
                    "format": "int64",
                    "example": 30
                },
                "home_runs": {
                    "type": "integer",
                    "format": "int64",
                    "example": 5
                },
                "name": {
                    "type": "string",
                    "format": "string",
                    "example": "田中太郎"
                },
                "runs_batted_in": {
                    "type": "integer",
                    "format": "int64",
                    "example": 20
                },
                "uniform_number": {
                    "type": "integer",
                    "format": "int64",
                    "example": 1
                },
                "walks": {
                    "type": "integer",
                    "format": "int64",
                    "example": 10
                }
            }
        },
        "internal.createPlayerResponse": {
            "type": "object",
            "properties": {
                "player": {
                    "$ref": "#/definitions/internal.playerResponseModel"
                }
            }
        },
        "internal.fetchPlayerResponse": {
            "type": "object",
            "properties": {
                "player": {
                    "$ref": "#/definitions/internal.playerResponseModel"
                }
            }
        },
        "internal.playerResponseModel": {
            "type": "object",
            "properties": {
                "at_bats": {
                    "type": "integer"
                },
                "hits": {
                    "type": "integer"
                },
                "home_runs": {
                    "type": "integer"
                },
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "runs_batted_in": {
                    "type": "integer"
                },
                "uniform_number": {
                    "type": "integer"
                },
                "walks": {
                    "type": "integer"
                }
            }
        },
        "internal.searchPlayerResponse": {
            "type": "object",
            "properties": {
                "players": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/internal.playerResponseModel"
                    }
                }
            }
        }
    }
}